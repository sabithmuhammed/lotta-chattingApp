<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
      integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link rel="stylesheet" href="/css/style.css" />
    <script src="/js/main.js" defer></script>
  </head>
  <body>
    <div class="container">

      <!-- main nav start -->
      <nav><h1>Lotta</h1></nav>
      <!-- main nav end -->

      <main>

        <!-- login page section  start-->
        <div class="login-container" data-signup-div>
          <!-- signup page start -->
          <div class="signup-div wh-100 hidden" data-signup>
            <div class="login wh-100">
              <div class="login-image">
                <img src="/images/background/login-bg.png" alt="" />
              </div>
              <div class="input-div">
                <label for="semail"><i class="fa-solid fa-envelope"></i></label>
                <input type="text" id="semail" placeholder="Email" />
              </div>
              <div class="input-div">
                <label for="sname"><i class="fa-solid fa-user"></i></label>
                <input type="text" id="sname" placeholder="Name" />
              </div>
              <div class="input-div">
                <label for="spassword"><i class="fa-solid fa-key"></i></label>
                <input type="password" id="spassword" placeholder="Password" />
              </div>
              <button class="btn btn-primary">Signup</button>
              <p>
                Already have an account?
                <span class="c-primary" onclick="changeLogin('login')"
                  >Login</span
                >
              </p>
            </div>
          </div>
          <!-- signup page end -->

          <!-- login page start -->
          <div class="login-div wh-100" data-login>
            <div class="login wh-100">
              <div class="login-image">
                <img src="/images/background/login-bg.png" alt="" />
              </div>
              <div class="input-div">
                <label for="lemail"><i class="fa-solid fa-envelope"></i></label>
                <input type="text" id="lemail" placeholder="Email" />
              </div>
              <div class="input-div">
                <label for="lpassword"><i class="fa-solid fa-key"></i></label>
                <input type="password" id="lpassword" placeholder="Password" />
              </div>
              <button class="btn btn-primary">Login</button>
              <p>
                Don't have an account?
                <span class="c-primary" onclick="changeLogin('signup')"
                  >Signup</span
                >
              </p>
            </div>
          </div>
          <!-- login page end -->
        </div>
        <!-- login page section  end-->

        <!-- chat list section start -->
        <div class="chat-list-container hidden" data-chat-list>
          <div class="chat-list-actions"></div>
          <div class="chat-list-div">
            <div class="list-container">
              <div class="pfp">
                <div class="status status-active"></div>
              </div>
              <div class="name">Nazim</div>
              <div class="new-message"></div>
            </div>
            <div class="list-container">
              <div class="pfp">
                <div class="status status-active"></div>
              </div>
              <div class="name">Rishal</div>
              <div class="new-message"></div>
            </div>
            <div class="list-container">
              <div class="pfp">
                <div class="status status-active"></div>
              </div>
              <div class="name">Sabith</div>
              <div class="new-message"></div>
            </div>
          </div>
        </div>
        <!-- chat list section end -->

        <!-- individual chat section start -->
        <div class="chat-container hidden" data-chat>
          <div class="chat-nav">
            <div class="chat-back">&larr;</div>
            <div class="chat-pfp"></div>
            <div class="chat-name">
              <div class="">Nazim</div>
              <div class="status-text">Online</div>
            </div>
          </div>
          <div class="chat-history">
            <div class="sent-text">fgsfshs fjsjfgjls jfgjlsl fjgfsh</div>
            <div class="receive-text">sghdhgs</div>
            <div class="sent-text">fgsfshs</div>
            <div class="receive-text">sghdhgs fdhgjs ghfdsghj</div>
            <div class="sent-text">fgsfshs</div>
