            <div class="receive-text">sghdhgs fdhgjs ghfdsghj</div><div class="sent-text">fgsfshs</div>
            <div class="receive-text">sghdhgs fdhgjs ghfdsghj</div><div class="sent-text">fgsfshs</div>
            <div class="receive-text">sghdhgs fdhgjs ghfdsghj</div>
            <div class="sent-text">fgsfshs fjsjfgjls jfgjlsl fjgfsh</div>
          </div>
          <div class="chat-input-div">
            <input type="text" class="chat-input" />
            <button class="btn-send btn-primary">Send</button>
          </div>
        </div>
        <!-- individual chat section start -->
      </main>
      <footer></footer>
    </div>
  </body>
</html>
